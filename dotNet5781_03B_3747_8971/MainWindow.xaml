<Window x:Class="dotNet5781_03B_3747_8971.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_3747_8971"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Stretch x:Key="Stretch1">Fill</Stretch>
    </Window.Resources>
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="391*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid Name ="UpGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto" Margin="0,0,-0.4,0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="687*"/>
                <ColumnDefinition Width="48*"/>
                <ColumnDefinition Width="23*"/>
            </Grid.ColumnDefinitions>
            <Button Name="buAddABus" Content="Add a Bus" HorizontalAlignment="Left" Margin="587.8,24,0,0" VerticalAlignment="Top" Width="134" Height="38" Click="AddABus_Click" Grid.ColumnSpan="2" Grid.Column="1"/>
            <ListBox ItemsSource="{Binding}" Name="cbBuses" HorizontalAlignment="Left" Height="197" VerticalAlignment="Top" Width="608" Grid.ColumnSpan="2">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path=LICENSEPLATE}" />
                            <Button x:Name="TravelButton"  VerticalAlignment="Top" HorizontalAlignment="Center" Click="Travel_Click" Margin="200,-15,0,0" Width="80" CommandParameter="{Binding}" Command="{Binding ElementName=Window, Path=currentDisplayBusLine}">Make a trip</Button>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
             </ListBox>
        </Grid>
    </Grid>
</Window>
