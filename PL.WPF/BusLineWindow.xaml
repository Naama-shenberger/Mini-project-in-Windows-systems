<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.WPF.BusLineWindow"
        mc:Ignorable="d"
        Title="BusLineWindow" Height="550" Width="900">
    <Grid>
        <ComboBox Name="ComboBoxBusLineNumber" ItemsSource="{Binding}" Margin="40,22,734.6,474.8" SelectionChanged="cbBusBusLineNumber_SelectionChanged" />
        <Button x:Name="UpdateButton" Content="update" HorizontalAlignment="Left" Margin="22,417,0,0" VerticalAlignment="Top" Width="75" Click="UpdateButton_Click" />
        <Button x:Name="AddBusLineButton" Content="Add Bus Line" HorizontalAlignment="Left" Margin="22,463,0,0" VerticalAlignment="Top" Width="75" Click="AddBusLineButton_Click" Height="18"/>
        <Button x:Name="DeleteButon" Content="Delete" HorizontalAlignment="Left" Margin="22,370,0,0" VerticalAlignment="Top" Width="75" Click="DeleteButon_Click"/>
        <Grid x:Name="gridOneBusLine"  HorizontalAlignment="Left" Margin="40,51,0,0" VerticalAlignment="Top" Height="209" Width="277">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Visibility="Hidden" Name="BusLineLabel" Content="Bus Line Number:" Grid.Column="0" HorizontalAlignment="Left" Margin="4,3,0,3" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox Visibility="Hidden" x:Name="BusLineNumberTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="3,4,0,3" Grid.Row="1" Text="{Binding BusLineNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Height="25" Width="120"/>
            <Label Name="LabelArea" Content="Area:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="2" VerticalAlignment="Center"/>
            <ComboBox x:Name="AreaComboBox"  Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="2" SelectedItem="{Binding Area}" KeyDown="OnKeyDownHandler"  VerticalAlignment="Center" Width="120"/>
            <Label Name="FriststopLabel" Content="First stop:" Grid.Column="0" Grid.Row="3"  HorizontalAlignment="Left" Height="30" Margin="3,4.6,0,32.6" VerticalAlignment="Center" Width="94" Grid.RowSpan="2"/>
            <TextBox x:Name="TextBoxFristStop" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Margin="3,4,0,3"  Text="{Binding FirstStopNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Height="25" Width="120"/>
            <Label Name="LastStopLabel" Content="Last stop:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" Height="30" Margin="3,6.8,0,0" VerticalAlignment="Top" Width="94" Grid.RowSpan="3"/>
            <TextBox KeyDown="OnKeyDownHandler" x:Name="LastStopTextBox" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Margin="3,4,0,3"  Text="{Binding LastStopNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Height="25" Width="120"/>
        </Grid>
        <DataGrid x:Name="DataGrirdStationslines"  AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="492,211,18.6,83.8" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.691"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.424"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="CodeStationColumn" Binding="{Binding BusStationKey}" Header="Code Station" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="StationAddressClumn" Binding="{Binding StationAddress}" Header="Station Address" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="NameStationClumn" Binding="{Binding StationName}" Header="Name Station" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="nuerInLineColumn" Binding="{Binding NumberStationInLine}" Header="Number Station In Line" Width="SizeToHeader"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btUpdateGradeInCourse" Content="Update Garde"  ToolTip="Update grade for selected course, for selected student"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="DataGrirdAllStationslines"  AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="583,22,57.6,349.8" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="AllCodeStationColumn" Binding="{Binding BusStationKey}" Header="Code Station" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="AllStationAddressColumn" Binding="{Binding StationAddress}" Header="Station Address" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="AllnameStationColumn" Binding="{Binding StationName}" Header="Name Station" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
