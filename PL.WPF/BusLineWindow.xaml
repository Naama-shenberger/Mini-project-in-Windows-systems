<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        xmlns:BO="clr-namespace:BO;assembly=BL" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PL.WPF.BusLineWindow"
        mc:Ignorable="d"
        Title="BusLineWindow" Height="830" Width="900">
    <WrapPanel >
        <Grid>
            <ComboBox x:Name="ComboBoxBusLineNumber" ItemsSource="{Binding}" Margin="145,16,628.6,745.8" SelectionChanged="cbBusBusLineNumber_SelectionChanged" Height="39" />
            <Button x:Name="UpdateButton" Content="update" HorizontalAlignment="Left" Margin="713,626,0,0" VerticalAlignment="Top" Width="147" Click="UpdateButton_Click" Height="31" />
            <Button x:Name="AddBusLineButton" Content="Add Bus Line" HorizontalAlignment="Left" Margin="713,679,0,0" VerticalAlignment="Top" Width="147" Click="AddBusLineButton_Click" Height="32"/>
            <Button x:Name="DeleteButon" Content="Delete" HorizontalAlignment="Left" Margin="713,575,0,0" VerticalAlignment="Top" Width="147" Click="DeleteButon_Click"/>

            <Grid x:Name="gridOneBusLine"  HorizontalAlignment="Left" Margin="18,76,0,0" VerticalAlignment="Top" Height="122" Width="277">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <Label x:Name="LabelArea" Content="Area:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="2" VerticalAlignment="Center"/>
                <ComboBox x:Name="AreaComboBox"  Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="2.6,4.4,0,28.4" Grid.Row="2" SelectedItem="{Binding Area}" VerticalAlignment="Center" Width="120" Grid.RowSpan="2"/>
                <Label x:Name="FriststopLabel" Content="First stop:" Grid.Column="0" Grid.Row="3"  HorizontalAlignment="Left" Height="30" Margin="3,4.6,0,32.6" VerticalAlignment="Center" Width="94" Grid.RowSpan="2"/>
                <ComboBox x:Name="FirstStopcb" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Margin="3,4,0,3"  Text="{Binding FirstStopNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  SelectedItem="{Binding FirstStopNumber}" VerticalAlignment="Center" Height="25" Width="120"/>
                <Label x:Name="LastStopLabel" Content="Last stop:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" Height="30" Margin="3,6.8,0,0" VerticalAlignment="Top" Width="94" Grid.RowSpan="3"/>
                <ComboBox x:Name="LastStopcb" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Margin="3,4,0,3" Text="{Binding LastStopNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" SelectedItem="{Binding LastStopNumber}" VerticalAlignment="Center" Height="25" Width="120"/>
            </Grid>
            <DataGrid x:Name="DataGrirdStationslines" IsReadOnly="False" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="138,355,2.6,186.8" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5" SelectionChanged="DataGrirdStationslines_SelectionChanged">
                <DataGrid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.691" AngleY="-0.274"/>
                        <RotateTransform/>
                        <TranslateTransform X="-1.435" Y="0.917"/>
                    </TransformGroup>
                </DataGrid.RenderTransform>
                <DataGrid.Columns>
                    <materialDesign:DataGridTextColumn>
                    </materialDesign:DataGridTextColumn>
                    <DataGridTextColumn x:Name="CodeStationColumn"  Binding="{Binding BusStationKey}" Header="Code Station" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="StationAddressClumn" Binding="{Binding StationAddress}" Header="Station Address" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="NameStationClumn" Binding="{Binding StationName}" Header="Name Station" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="nuerInLineColumn" Binding="{Binding NumberStationInLine}" IsReadOnly="False" Header="Number Station In Line" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="BusStationKeyPrevious" Binding="{Binding AverageTravelTime}" Header="Time          " Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="NextStaionColunm" Binding="{Binding Distance}" Header="distance" Width="SizeToHeader"/>
                  
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Expander Header="Options of bus line station">
                                    <StackPanel>
                                        <Button x:Name="btUpdateIndexInLine" Click="UpdateIndexInLine_Click" Content="Update Number Station"  ToolTip="Update Number Station in the Line"/>
                                        <Button x:Name="btRemoveStationLine" Content="Remove Station" Click="RemoveStation_Click" />
                                        <Button x:Name="btnUpdateTime" Content="Update Time" Click="UpdateTime_Click" />
                                        <Button x:Name="btnUpdateDistance" Content="Update Distance" Click="UpdateDistance_Click"/>
                                    </StackPanel>
                                </Expander>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>


            <DataGrid x:Name="DataGrirdAllStationslines"  AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="322,60,4.6,572.8" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5" >

                <DataGrid.Columns>
                    <materialDesign:DataGridTextColumn>

                    </materialDesign:DataGridTextColumn>
                    <DataGridTextColumn x:Name="AllCodeStationColumn" Binding="{Binding BusStationKey}" Header="Code Station" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="AllStationAddressClumn" Binding="{Binding StationAddress}" Header="Station Address" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="AllNameStationClumn" Binding="{Binding StationName}" Header="Name Station" Width="SizeToHeader"/>


                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Button x:Name="btDelBusLineStation" Content="del Station" Click="btDelBusLineStation_Click"/>
                                    <Button x:Name="bthAddBusLineStationToLine" Content="Add Station" Click="bthAddBusLineStationToLine_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>

            <Button x:Name="AddBusLineStatoin" Content="Add Bus Line Station" HorizontalAlignment="Left" Margin="700,253,0,0" VerticalAlignment="Top" Width="184" Click="AddBusLineStatoin_Click" />
            <Button x:Name="backbtn" Content="Back" HorizontalAlignment="Left" Margin="713,733,0,0" VerticalAlignment="Top" Width="147" Click="backbtn_Click" Height="29"/>
            <Expander Header="Line schedule" HorizontalAlignment="Left" Height="51" Margin="22,228,0,0" VerticalAlignment="Top" Width="187">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="lvExpander" ItemsSource="{Binding}" Margin="-6,0,-257.8,-129" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Travel Start Time-" DisplayMemberBinding="{Binding TravelStartTime}"/>
                                <GridViewColumn Header="Travel End Time-" DisplayMemberBinding="{Binding TravelEndTime}"/>
                                <GridViewColumn Header="Exit Every-"  DisplayMemberBinding="{Binding BusDepartureNumber}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </Grid>
            </Expander>
            <Label Content="Choose a bus line" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top" Width="105" Height="39"/>
            <Expander Header="More details" Margin="40,609,651.6,143.8">
                <Grid Background="#FFE5E5E5" >
                    <TreeView x:Name="Treeview" ItemsSource="{Binding BusLine}" Background="AliceBlue" Margin="-113,22,-216,-133" >
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Key}"/>
                                    <TreeViewItem Header="{Binding BusLineNumber}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type TreeViewItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                                    <Expander Header="{Binding BusLineNumber}" IsExpanded="True">
                                                        <ItemsPresenter/>
                                                    </Expander>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </TreeView.GroupStyle>
                    </TreeView>
                </Grid>
            </Expander>
            <TextBox  x:Name="Ddistancetb" Visibility="Hidden" HorizontalAlignment="Left" Height="25" Margin="170,553,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="77"/>
            <materialDesign:TimePicker  Visibility="Hidden" Name="TimePickerDistance" HorizontalAlignment="Left" Margin="170,597,0,0" VerticalAlignment="Top"/>
            <materialDesign:Card Content="All Bus Lines Stations" HorizontalAlignment="Left" Margin="339,22,0,0" VerticalAlignment="Top" Width="139" Height="29"/>
            <materialDesign:Card Content="All Bus Lines Stations of line" HorizontalAlignment="Left" Margin="339,313,0,0" VerticalAlignment="Top" Height="26" Width="162"/>
        </Grid>
    </WrapPanel>
</Window>
