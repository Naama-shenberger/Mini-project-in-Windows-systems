<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        xmlns:BO="clr-namespace:BO;assembly=BL" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PL.WPF.BusLineWindow"
        mc:Ignorable="d"
        Title="BusLineWindow" Height="850" Width="1000">
    <Grid>

        <ComboBox x:Name="ComboBoxBusLineNumber" ItemsSource="{Binding}" Margin="145,22,688.6,759" SelectionChanged="cbBusBusLineNumber_SelectionChanged" Height="39" />
        <Button x:Name="UpdateButton" Content="update" HorizontalAlignment="Left" Margin="22,417,0,0" VerticalAlignment="Top" Width="93" Click="UpdateButton_Click" />
        <Button x:Name="AddBusLineButton" Content="Add Bus Line" HorizontalAlignment="Left" Margin="22,463,0,0" VerticalAlignment="Top" Width="147" Click="AddBusLineButton_Click" Height="25"/>
        <Button x:Name="DeleteButon" Content="Delete" HorizontalAlignment="Left" Margin="22,370,0,0" VerticalAlignment="Top" Width="75" Click="DeleteButon_Click"/>

        <Grid x:Name="gridOneBusLine"  HorizontalAlignment="Left" Margin="40,84,0,0" VerticalAlignment="Top" Height="122" Width="277">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--<Label Content="Travel Start Time:" Grid.Row="6" Grid.Column="0"  HorizontalAlignment="Left" Margin="3,0.4,0,-3.8"  VerticalAlignment="Center" Height="29" Grid.RowSpan="4"/>
            <TextBox Text="{Binding TravelStartTime}" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Margin="2.8,4,0,0.4"  VerticalAlignment="Center" Width="120" Height="22"/>-->
            <Label x:Name="LabelArea" Content="Area:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="2" VerticalAlignment="Center"/>
            <ComboBox x:Name="AreaComboBox"  Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="2.6,4.4,0,28.4" Grid.Row="2" SelectedItem="{Binding Area}" VerticalAlignment="Center" Width="120" Grid.RowSpan="2"/>
            <Label x:Name="FriststopLabel" Content="First stop:" Grid.Column="0" Grid.Row="3"  HorizontalAlignment="Left" Height="30" Margin="3,4.6,0,32.6" VerticalAlignment="Center" Width="94" Grid.RowSpan="2"/>
            <ComboBox x:Name="FirstStopcb" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Margin="3,4,0,3"  Text="{Binding FirstStopNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  SelectedItem="{Binding FirstStopNumber}" VerticalAlignment="Center" Height="25" Width="120"/>
            <Label x:Name="LastStopLabel" Content="Last stop:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" Height="30" Margin="3,6.8,0,0" VerticalAlignment="Top" Width="94" Grid.RowSpan="3"/>
            <ComboBox x:Name="LastStopcb" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Margin="3,4,0,3" Text="{Binding LastStopNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" SelectedItem="{Binding LastStopNumber}" VerticalAlignment="Center" Height="25" Width="120"/>
        </Grid>
        <DataGrid x:Name="DataGrirdStationslines" IsReadOnly="False" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="302,454,13.6,15" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5" SelectionChanged="DataGrirdStationslines_SelectionChanged">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.691" AngleY="-0.274"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.435" Y="0.917"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="CodeStationColumn"  Binding="{Binding BusStationKey}" Header="Code Station" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="StationAddressClumn" Binding="{Binding StationAddress}" Header="Station Address" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="NameStationClumn" Binding="{Binding StationName}" Header="Name Station" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="nuerInLineColumn" Binding="{Binding NumberStationInLine}" IsReadOnly="False" Header="Number Station In Line" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="NextStaionColunm" Binding="{Binding }" Header="distance" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="BusStationKeyPrevious" Binding="{Binding }" Header="Time" Width="SizeToHeader"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button x:Name="btUpdateIndexInLine" Click="UpdateIndexInLine_Click" Content="Update Number Station"  ToolTip="Update Number Station in the Line"/>
                                <Button x:Name="btRemoveStationLine" Content="Remove Station" Click="RemoveStation_Click" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="DataGrirdAllStationslines"  AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="368,8,9.6,625" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5" >

            <DataGrid.Columns>
                <DataGridTextColumn x:Name="AllCodeStationColumn" Binding="{Binding BusStationKey}" Header="Code Station" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="AllStationAddressClumn" Binding="{Binding StationAddress}" Header="Station Address" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="AllNameStationClumn" Binding="{Binding StationName}" Header="Name Station" Width="SizeToHeader"/>


                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button x:Name="btDelBusLineStation" Content="del Station" Click="btDelBusLineStation_Click"/>
                                <Button x:Name="bthAddBusLineStationToLine" Content="Add Station" Click="bthAddBusLineStationToLine_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>

        <Button x:Name="AddBusLineStatoin" Content="Add Bus Line Station" HorizontalAlignment="Left" Margin="754,200,0,0" VerticalAlignment="Top" Width="184" Click="AddBusLineStatoin_Click" />
        <Button x:Name="backbtn" Content="Back" HorizontalAlignment="Left" Margin="22,533,0,0" VerticalAlignment="Top" Width="75" Click="backbtn_Click"/>
        <Expander Header="Line schedule" HorizontalAlignment="Left" Height="51" Margin="22,228,0,0" VerticalAlignment="Top" Width="187">
            <Grid Background="#FFE5E5E5">
                <ListView x:Name="lvExpander" ItemsSource="{Binding}" Margin="-110,-9,-294,-114" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Travel Start Time-" DisplayMemberBinding="{Binding TravelStartTime}"/>
                            <GridViewColumn Header="Travel End Time-" DisplayMemberBinding="{Binding TravelEndTime}"/>
                            <GridViewColumn Header="Exit Every-"  DisplayMemberBinding="{Binding BusDepartureNumber}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
        </Expander>
        <Label Content="Choose a bus line" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="105" Height="39"/>
        <TreeView x:Name="Treeview" ItemsSource="{Binding BusLine}" Background="AliceBlue"  Margin="40,570,857.6,83">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding}">
                    <StackPanel>
                        <TextBlock Text="{Binding Key}"/>
                        <TreeViewItem Header="{Binding BusLineNumber}"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                        <Expander Header="{Binding BusLineNumber}" IsExpanded="True">
                                            <ItemsPresenter/>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </TreeView.GroupStyle>
        </TreeView>
        <TextBox  x:Name="Ddistancetb" HorizontalAlignment="Left" Height="25" Margin="170,553,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="77"/>
        <materialDesign:TimePicker Name="TimePickerDistance" HorizontalAlignment="Left" Margin="170,597,0,0" VerticalAlignment="Top"/>




        <!--<Expander Header="Line schedule"  HorizontalAlignment="Left" Height="109" Margin="22,211,0,0" VerticalAlignment="Top" Width="307">
            <Grid Background="#FFE5E5E5" Height="83" Margin="0,0,-1.4,0">
                <ListView x:Name="lvExpander" ItemsSource="{Binding}"  Grid.ColumnSpan="3" HorizontalAlignment="Left" Width="232" Margin="1,0,0,32">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Travel Start Time-" DisplayMemberBinding="{Binding TravelStartTime}"/>
                            <GridViewColumn Header="Travel End Time-" DisplayMemberBinding="{Binding TravelEndTime}"/>
                            <GridViewColumn Header="Exit Every-"  DisplayMemberBinding="{Binding BusDepartureNumber }"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="68*"/>
                    <ColumnDefinition Width="21*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Expander>-->
    </Grid>
</Window>
