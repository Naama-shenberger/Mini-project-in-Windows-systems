<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        xmlns:BO="clr-namespace:BO;assembly=BL" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PL.WPF.BusLineWindow"
        mc:Ignorable="d"
        Title="BusLineWindow" Height="630" Width="900">
    <WrapPanel >
        <Grid Height="803">
            <ComboBox x:Name="ComboBoxBusLineNumber" Background="#FFE6F1E2" ItemsSource="{Binding}" Margin="124,16,591.6,745.8" SelectionChanged="cbBusBusLineNumber_SelectionChanged" Height="39" />
            <Button x:Name="UpdateButton"  BorderBrush="#FF673AB7" Background="#FFBE9DE8" Content="update" HorizontalAlignment="Left" Margin="18,443,0,0" VerticalAlignment="Top" Width="147" Click="UpdateButton_Click" Height="31" />
            <Button x:Name="AddBusLineButton"  BorderBrush="#FF673AB7" Background="#FFBE9DE8" Content="Add Bus Line" HorizontalAlignment="Left" Margin="18,491,0,0" VerticalAlignment="Top" Width="147" Click="AddBusLineButton_Click" Height="32"/>
            <Button x:Name="DeleteButon"  BorderBrush="#FF673AB7" Background="#FFBE9DE8" Content="Delete" HorizontalAlignment="Left" Margin="18,391,0,0" VerticalAlignment="Top" Width="147" Click="DeleteButon_Click"/>

            <Grid x:Name="gridOneBusLine" Background="#FFE6F1E2"  HorizontalAlignment="Left" Margin="18,47,0,0" VerticalAlignment="Top" Height="135" Width="277">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <Label x:Name="LabelArea" Content="Area:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="2" VerticalAlignment="Center"/>
                <ComboBox x:Name="AreaComboBox"  Grid.Column="1" HorizontalAlignment="Left" Height="32" Margin="2.6,4.4,0,28.4" Grid.Row="2" SelectedItem="{Binding Area}" VerticalAlignment="Center" Width="120" Grid.RowSpan="2"/>
                <Label x:Name="FriststopLabel" Content="First stop:" Grid.Column="0" Grid.Row="3"  HorizontalAlignment="Left" Height="30" Margin="3,4.6,0,32.6" VerticalAlignment="Center" Width="94" Grid.RowSpan="2"/>
                <ComboBox x:Name="FirstStopcb" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Margin="3,4,0,3"  Text="{Binding FirstStopNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  SelectedItem="{Binding FirstStopNumber}" VerticalAlignment="Center" Height="25" Width="120"/>
                <Label x:Name="LastStopLabel" Content="Last stop:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" Height="30" Margin="3,6.8,0,0" VerticalAlignment="Top" Width="94" Grid.RowSpan="3"/>
                <ComboBox x:Name="LastStopcb" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Margin="3,4,0,3" Text="{Binding LastStopNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" SelectedItem="{Binding LastStopNumber}" VerticalAlignment="Center" Height="25" Width="120"/>
            </Grid>
            <DataGrid x:Name="DataGrirdStationslines" ToolTip="All Bus Lines Stations of line" Background="#FFE6F1E2" IsReadOnly="False" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="313,17,1.6,546" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5" SelectionChanged="DataGrirdStationslines_SelectionChanged">
                <DataGrid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.691" AngleY="-0.274"/>
                        <RotateTransform/>
                        <TranslateTransform X="-1.435" Y="0.917"/>
                    </TransformGroup>
                </DataGrid.RenderTransform>
                <DataGrid.Columns>
                    <materialDesign:DataGridTextColumn>
                    </materialDesign:DataGridTextColumn>
                    <DataGridTextColumn x:Name="CodeStationColumn"  Binding="{Binding BusStationKey}" Header="Code Station" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="StationAddressClumn" Binding="{Binding StationAddress}" Header="Station Address" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="NameStationClumn" Binding="{Binding StationName}" Header="Name Station               " Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="nuerInLineColumn" Binding="{Binding NumberStationInLine}" IsReadOnly="False" Header="Index Station" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="BusStationKeyPrevious" Binding="{Binding AverageTravelTime}" Header="Time          " Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="NextStaionColunm" Binding="{Binding Distance}" Header="distance" Width="SizeToHeader"/>

                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Expander Header="Options of bus line station">
                                    <StackPanel>
                                        <Button x:Name="btUpdateIndexInLine" BorderBrush="#FF673AB7" Background="#FFBE9DE8" Click="UpdateIndexInLine_Click" Content="Update Number Station"  ToolTip="Update Number Station in the Line"/>
                                        <Button x:Name="btRemoveStationLine" BorderBrush="#FF673AB7" Background="#FFBE9DE8" Content="Remove Station" Click="RemoveStation_Click" />
                                        <Button x:Name="btnUpdateTime" BorderBrush="#FF673AB7" Background="#FFBE9DE8" Content="Update Time" Click="UpdateTime_Click" />
                                        <Button x:Name="btnUpdateDistance" BorderBrush="#FF673AB7" Background="#FFBE9DE8" Content="Update Distance" Click="UpdateDistance_Click"/>
                                    </StackPanel>
                                </Expander>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>


            <DataGrid x:Name="DataGrirdAllStationslines" ToolTip="All Bus Lines Stations" Background="#FFE6F1E2"  AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="307,302,-0.4,288" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5" >

                <DataGrid.Columns>
                    <materialDesign:DataGridTextColumn>

                    </materialDesign:DataGridTextColumn>
                    <DataGridTextColumn x:Name="AllCodeStationColumn" Binding="{Binding BusStationKey}" Header="Code Station" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="AllStationAddressClumn" Binding="{Binding StationAddress}" Header="Station Address" Width="SizeToHeader"/>
                    <DataGridTextColumn x:Name="AllNameStationClumn" Binding="{Binding StationName}" Header="Name Station" Width="SizeToHeader"/>


                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Button x:Name="btDelBusLineStation" BorderBrush="#FF673AB7" Background="#FFBE9DE8" Content="del Station" Click="btDelBusLineStation_Click"/>
                                    <Button x:Name="bthAddBusLineStationToLine" BorderBrush="#FF673AB7" Background="#FFBE9DE8" Content="Add Station" Click="bthAddBusLineStationToLine_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>

            <Button x:Name="AddBusLineStatoin" BorderBrush="#FF673AB7" Background="#FFBE9DE8" Content="Add Bus Line Station" HorizontalAlignment="Left" Margin="705,520,0,0" VerticalAlignment="Top" Width="179" Click="AddBusLineStatoin_Click" Height="35" />
            <Button x:Name="backbtn" Content="Back"  BorderBrush="#FF673AB7" Background="#FFBE9DE8" HorizontalAlignment="Left" Margin="18,549,0,0" VerticalAlignment="Top" Width="147" Click="backbtn_Click" Height="29"/>
            <Expander Header="Line schedule"  Background="#FFE6F1E2" HorizontalAlignment="Left" Height="51" Margin="18,236,0,0" VerticalAlignment="Top" Width="277">
                <Grid Background="#FFE6F1E2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="169*"/>
                        <ColumnDefinition Width="18*"/>
                    </Grid.ColumnDefinitions >
                    <ListView x:Name="lvExpander"  IsSynchronizedWithCurrentItem="True" Background="Transparent" ItemsSource="{Binding}" Margin="7,0,-69.6,-74" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="237" >
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </ListView.Resources>
                        <ListView.View >

                            <GridView materialDesign:ColorZoneAssist.Background="#FFE6F1E2"  >

                                <GridViewColumn  Header="Start Time" DisplayMemberBinding="{Binding TravelStartTime}"/>
                                <GridViewColumn Header="End Time" DisplayMemberBinding="{Binding TravelEndTime}"/>
                                <GridViewColumn Header="Exit Every"  DisplayMemberBinding="{Binding BusDepartureNumber}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </Grid>
            </Expander>
            <Label Content="Choose a bus line" Background="#FFE6F1E2"  HorizontalAlignment="Left" Margin="18,16,0,0" VerticalAlignment="Top" Width="112" Height="39"/>
            <Expander Header="More details"  Background="#FFE6F1E2" Margin="18,181,591.6,567">
                <Grid Background="#FFE5E5E5" >

                    <TreeView x:Name="Treeview" ItemsSource="{Binding BusLine}" Background="#FFE6F1E2" Margin="88,8,-279,-104" >
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Key}"/>
                                    <TreeViewItem Header="{Binding BusLineNumber}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type TreeViewItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                                    <Expander Header="{Binding BusLineNumber}" IsExpanded="True">
                                                        <ItemsPresenter/>
                                                    </Expander>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </TreeView.GroupStyle>
                    </TreeView>
                </Grid>
            </Expander>
            <TextBox  Background="#FFE6F1E2" x:Name="Ddistancetb" Visibility="Hidden" HorizontalAlignment="Left" Height="25" Margin="170,553,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="77"/>
            <materialDesign:TimePicker Background="#FFE6F1E2"  Visibility="Hidden" Name="TimePickerDistance" HorizontalAlignment="Left" Margin="170,597,0,0" VerticalAlignment="Top"/>


        </Grid>
    </WrapPanel>
</Window>
