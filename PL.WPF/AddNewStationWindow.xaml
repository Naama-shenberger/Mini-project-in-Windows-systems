<Window x:Class="PL.WPF.AddNewStationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        mc:Ignorable="d"
        Title="AddNewStationWindow" Height="350" Width="400">
    <Grid>
        <Grid x:Name="gridOneBusStation" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Height="179" Width="307">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label  Name="BusStationLabel" Content="Bus Line Number:" Grid.Column="0" HorizontalAlignment="Left" Margin="4,3,0,3" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox  x:Name="Bus_Station_Key" Grid.Column="1" HorizontalAlignment="Left" Margin="3,4,0,3" Grid.Row="0"  VerticalAlignment="Center" Height="25" Width="150"/>
            <Label Name="LabelStationName" Content="Name:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox  x:Name="Station_Name"  Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="2"    VerticalAlignment="Center" Width="150"/>
            <Label Name="AddressLabel" Content="Address:" Grid.Column="0" Grid.Row="3"  HorizontalAlignment="Left" Height="30" Margin="3,4.6,0,32.6" VerticalAlignment="Center" Width="94" Grid.RowSpan="2"/>
            <TextBox x:Name="Station_Address" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Margin="3,4,0,3"    VerticalAlignment="Center" Height="25" Width="150"/>
            <Label Name="Latitude_Label" Content="Latitude:" Grid.Column="0" Grid.Row="4"  HorizontalAlignment="Left" Height="30" Margin="3,6,0,6.4" VerticalAlignment="Center" Width="94"/>
            <TextBox x:Name="Station_Latitude" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Margin="3,4,0,3"   VerticalAlignment="Center" Height="25" Width="150"/>
            <Label Name="LongitudeLabel" Content="Longitude:" Grid.Column="0" Grid.Row="5"  HorizontalAlignment="Left" Height="30" Margin="3,4.6,0,32.6" VerticalAlignment="Center" Width="94" Grid.RowSpan="2"/>
            <TextBox x:Name="Station_Longitude" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" Margin="3,4,0,3"  VerticalAlignment="Center" Height="25" Width="150"/>

        </Grid>
        <Button Content="ADD" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="138,257,0,0" Click="AddingButton_Click"/>
        

    </Grid>
</Window>
