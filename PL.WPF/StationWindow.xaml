<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.WPF.StationWindow"
        mc:Ignorable="d"
        Title="StationWindow" Height="450" Width="800">
    <Grid Margin="0,0,0.2,-0.8" RenderTransformOrigin="0.537,0.498" >
        <Grid.RowDefinitions>
            <RowDefinition Height="359*"/>
            <RowDefinition Height="62*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="413*"/>
            <ColumnDefinition Width="242*"/>
            <ColumnDefinition Width="139*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Select Station:" Grid.Row="0" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Height="25" Width="90"/>
        <ComboBox x:Name="ComboBoxBusStationKey" VerticalAlignment="Top" 
                  Grid.Row="0" Height="25" Margin="144,15,83.8,0"
                  ItemsSource="{Binding}" 
                  HorizontalContentAlignment="Left" VerticalContentAlignment="Top" SelectionChanged="ComboBoxBusStationKey_SelectionChanged"/>
        <Grid x:Name="gridOneBusStation"  HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Height="98" Width="358" RenderTransformOrigin="1.317,0.626">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Visibility="Hidden" Content="Stations Key" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Height="26" Margin="10,0.8,24.2,-0.4"/>
            <TextBox Visibility="Hidden" x:Name="BusStationKeyTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="3,4,0,3" Grid.Row="1" Text="{Binding BusStationKey, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Height="25" Width="120"/>
            <Label Content="Station Name:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"  Grid.ColumnSpan="2"/>
            <TextBox x:Name="nameTextBox"  Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="{Binding StationName,Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="10.2,0.4,-14.8,1.4" VerticalAlignment="Center" Height="35"/>
            <Label Content="Station Address:" Grid.Row="2"  Grid.Column="0" HorizontalAlignment="Left" Margin="10,9.8,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <TextBox x:Name="adressTextBox"  Grid.Row="1" Grid.Column="1" Text="{Binding StationAddress, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true }" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap"  VerticalAlignment="Top" Width="239" Margin="10.2,36.4,-15.6,-0.4" Grid.RowSpan="2" />
        </Grid>

        <Label Content="List of All following stations:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="47.2,0,0,192.2" Height="26" Width="220" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label Content="List of lines for selected Station:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" Height="26" Width="195"/>
        <DataGrid HorizontalAlignment="Left" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5" Height="113" VerticalAlignment="Top" Width="377" Margin="10,236,0,0">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.691"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.424"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="LineNumber" Binding="{Binding BusLineNumber}" Header="Bus Line Number" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="LineArea" Binding="{Binding Area}" Header="LineArea" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="FirstStation" Binding="{Binding FirstStopNumber}" Header="First Station" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="LastStation" Binding="{Binding LastStopNumber}" Header="Last Station" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid HorizontalAlignment="Left" Height="146" VerticalAlignment="Top" Width="166" Margin="47.2,188,0,0" Grid.Column="1"/>
        <Button Content="Changes on Current Station" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Margin="10,3.8,0,0" Height="44" Grid.Row="1" Click="Update_Click" Grid.Column="0"/>
        <Button Content="Add New Station" HorizontalAlignment="Left" VerticalAlignment="Top" Width="111" Grid.Column="2" Margin="17.6,263,0,0" Height="38" Click="AddStation_Click"/>
        <Button Content="Delete Current Station" HorizontalAlignment="Left" VerticalAlignment="Top" Width="138" Margin="192,3.8,0,0" Height="44" Grid.Row="1" Click="DeleteCurStation_Click" Grid.Column="0"/>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="111" Grid.Column="2" Margin="17.6,20.8,0,0"  RenderTransformOrigin="0.525,0.776" Height="31" Click="Back_Click" Grid.Row="1"/>


    </Grid>
</Window>
