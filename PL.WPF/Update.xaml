<Window x:Class="PL.WPF.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        mc:Ignorable="d"
        Title="Update" Height="250" Width="400">
    <Grid>
        <ComboBox Name="cbNumberIndex" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="229,40,0,0" VerticalAlignment="Top" Width="120" BorderBrush="#FF673AB7" />
        <Label Content="Select a station number on the route:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Height="27" Width="208" FontWeight="Bold"/>
        <Button x:Name="Done" Content="Done" HorizontalAlignment="Left" Margin="260,168,0,0" VerticalAlignment="Top" Width="75" Click="Done_Click"/>

    </Grid>
</Window>
