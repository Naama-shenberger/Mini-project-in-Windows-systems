<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.WPF.BusWindow"
        mc:Ignorable="d"
        Title="BusWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="lvBuses" SelectedItem="{Binding SelectedItem}" ItemsSource="{Binding BusList}"  HorizontalAlignment="Left" Height="271" Margin="271,32,0,0" VerticalAlignment="Top" Width="452">
            <ListView.View>
                <GridView >
                    <GridView.Columns>
                        <GridViewColumn DisplayMemberBinding="{Binding LicensePlate}" Header="License number" Width="120" />
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Button Click="ViewDetailsClick" Content="View Details" Margin="150,9,0,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Update Bus" Click="UpdateBus_Click" HorizontalAlignment="Left" Margin="38,32,0,0" VerticalAlignment="Top" Width="109" Height="23"/>
        <Button Content="Add Bus"  Click="AddBus_Click" HorizontalAlignment="Left" Margin="38,85,0,0" VerticalAlignment="Top" Width="109" Height="24"/>
        <Button Content="Delete Bus" Click="DeleteBus_Click" HorizontalAlignment="Left" Margin="38,137,0,0" VerticalAlignment="Top" Width="109" Height="25"/>


    </Grid>
</Window>
