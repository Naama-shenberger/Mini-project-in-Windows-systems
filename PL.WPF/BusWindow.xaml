<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.WPF.BusWindow"
        mc:Ignorable="d"
        Title="BusWindow" Height="450" Width="700">
    <Grid>
        <ComboBox x:Name="cbBusLicensePlate" HorizontalAlignment="Left"  VerticalAlignment="Top"
                  Grid.Row="0" Height="25" Margin="35,23,0,0" Width="123"
                  ItemsSource="{Binding}" 
                  HorizontalContentAlignment="Left" VerticalContentAlignment="Top" SelectionChanged="cbBusLicensePlate_SelectionChanged" />
        <Button Content="Update Bus" Click="UpdateBus_Click" HorizontalAlignment="Left" Margin="526,169,0,0" VerticalAlignment="Top" Width="123" Height="31"/>
        <Button Content="Add Bus"  Click="AddBus_Click" HorizontalAlignment="Left" Margin="555,366,0,0" VerticalAlignment="Top" Width="109" Height="24"/>
        <Button Content="Delete Bus" Click="DeleteBus_Click" HorizontalAlignment="Left" Margin="526,232,0,0" VerticalAlignment="Top" Width="123" Height="30"/>
        <Grid x:Name="gridOneBus"  HorizontalAlignment="Left" Margin="40,76,0,0" VerticalAlignment="Top" Height="326" Width="277">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Date Activity:" Grid.Column="0" HorizontalAlignment="Left" Margin="4,3,0,3" Grid.Row="1" VerticalAlignment="Center"/>
            <DatePicker x:Name="DateActivityDatePicker" Grid.Column="1" HorizontalAlignment="Left" Margin="3,4,0,3" Grid.Row="1" SelectedDate="{Binding DateActivity, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Height="25" Width="120"/>
            <Label Content="Date Treatment:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="2" VerticalAlignment="Center"/>
            <DatePicker x:Name="DateTreatmentDatePicker"  Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="2" SelectedDate="{Binding DateTreatment, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Km Treatment:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="3" VerticalAlignment="Center" Width="88"/>
            <TextBox x:Name="KmTreatmentTextBox" Grid.Column="1"  HorizontalAlignment="Left" Height="23"  Text="{Binding KilometersTreatment, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="3" Grid.Row="3" VerticalAlignment="Center" Width="120"/>
            <TextBox x:Name="LicensePlateTextBox" Visibility="Hidden" HorizontalAlignment="Left" Height="23" Grid.Row="0" Text="{Binding LicensePlate}" Margin="2.8,5,0,7.2" Width="124" Grid.Column="1"/>
            <Label Name="LabelLicensePlate" Visibility="Hidden" Grid.Column="0" HorizontalAlignment="Left"  Grid.Row="0" Content="License Plate:" Margin="3" VerticalAlignment="Center" Width="120"/>
            <Label Content="Km Gas:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="4" VerticalAlignment="Center"/>
            <TextBox x:Name="KmGasTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="4" Text="{Binding KilometersGas, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Total km:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="5" VerticalAlignment="Center"/>
            <TextBox x:Name="TotalkmTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="5" Text="{Binding Totalkilometers, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" />
            <Label Content="Air Tire:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="6" VerticalAlignment="Center"/>
            <TextBox x:Name="AirTireTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="6" Text="{Binding AirTire, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Oil Condition:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="7" VerticalAlignment="Center"/>
            <TextBox x:Name="OilConditionTextBox"  KeyDown="OnKeyDownHandler" Grid.Column="1" Text="{Binding OilCondition, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Left" Height="23"  Margin="3" Grid.Row="7" VerticalAlignment="Center" Width="120"/>


        </Grid>
        <Button Name="refuelButton" Click="refuel_Click" Content="refuel" HorizontalAlignment="Left" Margin="526,106,0,0" VerticalAlignment="Top" Width="123" Height="29"/>
        <Button Name="TreatmentButton" Content="Treatment" Click="Treatment_Click" HorizontalAlignment="Left" Margin="526,45,0,0" VerticalAlignment="Top" Width="123" Height="29"/>
       
    </Grid>
</Window>
