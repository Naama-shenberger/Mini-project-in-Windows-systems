<Window x:Class="PL.WPF.TimeUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PL.WPF"
        mc:Ignorable="d"
        Title="TimeUpdateWindow" Height="200" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid >
        <Grid Margin="0,0,-3.4,56.6" HorizontalAlignment="Right" Width="397">
            <Grid.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#FF2281D1"/>
                    <GradientStop Color="#FF34268A" Offset="1"/>
                    <GradientStop Color="#FF52A7F0" Offset="0.242"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Rectangle Height="132" Fill="White" VerticalAlignment="Bottom" Margin="20,0,18.6,28.4" RadiusY="28.27" RadiusX="28.27">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" Direction="0" BlurRadius="15" RenderingBias="Quality" ShadowDepth="1"/>
            </Rectangle.Effect>
        </Rectangle>
        <materialDesign:Card Content="Select an update Time" HorizontalAlignment="Left" Margin="36,60,0,0" VerticalAlignment="Top" Height="32" Width="133" FontWeight="Bold" BorderBrush="#FF2281D1"/>
        <materialDesign:TimePicker Name="Timepicker" HorizontalAlignment="Left" Margin="200,56,0,0" VerticalAlignment="Top" Height="32" Width="149" BorderBrush="#FF2281D1"/>
        <Button BorderBrush="#FF2281D1" Background="#FF2281D1" Click="Done_Click" Content="Done" HorizontalAlignment="Left" Margin="151,128,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.133,0.553"/>

    </Grid>
</Window>
