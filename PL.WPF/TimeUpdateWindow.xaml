<Window x:Class="PL.WPF.TimeUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PL.WPF"
        mc:Ignorable="d"
        Title="TimeUpdateWindow" Height="200" Width="400">
    <Grid Background="#FFE6F1E2">
        <materialDesign:Card Background="#FFE6F1E2" Content="Select an update Time" HorizontalAlignment="Left" Margin="35,56,0,0" VerticalAlignment="Top" Height="32" Width="133" FontWeight="Bold"/>
        <materialDesign:TimePicker Background="#FFE6F1E2" Name="Timepicker" HorizontalAlignment="Left" Margin="200,56,0,0" VerticalAlignment="Top" Height="32" Width="149"/>
        <Button  BorderBrush="#FF673AB7" Background="#FFBE9DE8"  Click="Done_Click" Content="Done" HorizontalAlignment="Left" Margin="158,128,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.133,0.553"/>

    </Grid>
</Window>
